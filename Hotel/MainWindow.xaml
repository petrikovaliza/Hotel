<Window x:Class="Hotel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hotel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="260*"/>
            <RowDefinition Height="60*"/>
        </Grid.RowDefinitions>
        <Grid Background="#bae3e8" Panel.ZIndex="-2"/>
        <Grid Grid.Row="2" Background="#445c93"/>
        <Image Source="Resources/icon.ico" HorizontalAlignment="Left"/>
        <TextBlock Grid.Row="0" Text="Hidder" FontSize="40" HorizontalAlignment="Center"/>
        <Frame Grid.Row="1" x:Name="MainFrame" ContentRendered="MainFrame_ContentRendered" NavigationUIVisibility="Hidden"/>
        <Button Content="Назад" Name="BtnBack" Width="175" Height="30" HorizontalAlignment="Right" Margin="5" Click="BtnBack_Click" Background="Honeydew"/>
    </Grid>
</Window>
