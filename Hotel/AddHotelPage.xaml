<Page x:Class="Hotel.AddHotelPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Hotel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddHotelPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="89*"/>
            <ColumnDefinition Width="311*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="55*"/>
            <RowDefinition Height="63*"/>
            <RowDefinition Height="63*"/>
            <RowDefinition Height="44*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Название"></TextBlock>
        <TextBlock Text="Количество звезд" Grid.Row="1" ></TextBlock>
        <TextBlock Text="Страна" Grid.Row="2" Grid.RowSpan="2"></TextBlock>
        <TextBox Text="{Binding Name}" Grid.Column ="1" Margin="10,19,184,19" TextChanged="TextBox_TextChanged_1"></TextBox>
        <TextBox Text="{Binding CountOfStar}" Grid.Column ="1" Grid.Row="1" Width="428" HorizontalAlignment="Left" Margin="31,22,0,22" TextChanged="TextBox_TextChanged"></TextBox>
        <ComboBox SelectedItem="{Binding Country}" Grid.Row="2" Grid.Column="1" x:Name="ComboCountry" DisplayMemberPath="Name" Margin="36,18,149,22" RenderTransformOrigin="0.5,0.5" SelectionChanged="ComboCountry_SelectionChanged">
            <ComboBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.076"/>
                    <TranslateTransform/>
                </TransformGroup>
            </ComboBox.RenderTransform>
        </ComboBox>
        <Button Content="Сохранить" Grid.Row="3" Name="BtnSave" Click="BtnSave_Click" Grid.Column="1" Background="Honeydew" Margin="31,10,31,10"/>
    </Grid>
</Page>
